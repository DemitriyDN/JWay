body {
	font-family: Verdana,sans-serif;

	font-size: 14px;
	line-height: 18px;
	letter-spacing: 1px;
	color: #F0F0F1;

	background-image: url(<%= asset_path 'background.jpg' %>);

	#main {
		width: 1180px;
		margin: 0 auto;

		header {
			padding: 10px 0;
			color: #CACACB;
			position: relative;
			padding-left: 205px;
			overflow: hidden;
			margin-bottom: 2px;

			#logo {
				margin: 0 auto;
				margin-right: 20px;
				float: left;

				a img {
					width: 193px;
					height: 52px;
				}
			}
			.tagline {
				float: left;

				img {
					height: 35px;
					width: 300px;
					margin-top: 7px;
					margin-left: 150px;
				}
			}
			.search {
				float: right;

				.search-form {
					margin-top: 10px;

					input {
						box-shadow: 0 4px 5px -5px rgba(38, 13, 13, 0.3) inset;
						border-color: #CFCFCF;
						background-color: #FFF;
						background-image: url(<%= asset_path 'search.png' %>);
						background-position: 6px 6px;
						background-repeat: no-repeat;
						border-radius: 13px;
						font-size: 13px;
						height: 17px;
						line-height: normal;
						padding: 4px 4px 4px 24px;
						position: relative;
						border: 1px solid #ACACAC;
						color: #919191;
						width: 250px;
					}
				}
			}
		}

		#content_wrapper {

			#content {
				width: 860px;
				float: left;

				&.col {
					padding: 0 10px;
				}
				&.content-col {
					width: 860px;
					float: left;
				}

				#post-index {

					.post-info {
						float: left;
						clear: both;
						width: 180px;
						text-align: right;
						margin-top: 13px;

						.date {
							font-family: Georgia, Times, serif;
							font-size: 20px;
							color: #4D4242;
							text-shadow: 0 0 1px #777;
						}

						.author {
							a {
								font-size: 11px;
								color: #999;
								text-decoration: none;
								font-weight: 600;
							}
						}
					}

					.post {
						padding: 6px 20px 20px 20px;
						width: 620px;
						margin-bottom: 25px;
						float: right;
						box-shadow: 0 0 20px rgba(0,0,0,0.2);
						background: #f3f3f3;
						border: 1px solid #CFCFCF;

						.title {
							font-family: Georgia, Times, serif;
							font-size: 32px;
							text-transform: uppercase;
							font-weight: 600;
							line-height: 32px;
							padding-bottom: 5px;
							margin-bottom: 15px;

							border-bottom: 1px solid #dadde3;
							box-shadow: #fdfdfe 0 1px;
							position: relative;

							a {
								font-size: 20px;
								color: #4D4242;
								text-shadow: 0 0 1px #777;

								&:hover {
									color: #666;
									text-decoration: underline;
								}
							}
							.comments {
								position: absolute;
								top: 3px;
								font-size: 20px;
								right: -6px;
								color: #333;

								.diget {
									width: 25px;
									text-align: center;
								}

								.img {
									position: absolute;
									width: 10px;
									height: 10px;
									top: 1px;
									right: 19px;
									opacity: 0.5;
								}
							}
						}
						.post-img {
							img {
								border: 1px solid #5F5F5F;
								width: 618px;
								height: 178px;
							}
						}
						.summary {
							margin: 7px 0;
							text-align: justify;

							color: #555;
							font-size: 12px;
							line-height: 16px;
						}
						.read_mode {
							a {
								font-size: 12px;
								padding: 0px 10px;
								background-color: #ececec;
								color: #282828;
								border-radius: 6px;
								box-shadow: inset 0 1px 0 #fff;
								border: 1px solid #B3B3B3;
								user-select: none;
								cursor: pointer;
								line-height: 26px;
								display: inline-block;

								&:hover {
									background-color: #fcfcfc;
									background-image: -ms-linear-gradient(top, #fcfcfc, #e8e8e8);
									background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#fcfcfc), to(#e8e8e8));
									background-image: -webkit-linear-gradient(top, #fcfcfc, #e8e8e8);
									background-image: -o-linear-gradient(top, #fcfcfc, #e8e8e8);
									background-image: linear-gradient(top, #fcfcfc, #e8e8e8);
									background-image: -moz-linear-gradient(top, #fcfcfc, #e8e8e8);
									background-repeat: repeat-x;
									filter: progid:dximagetransform.microsoft.gradient(startColorstr='#fcfcfc', endColorstr='#e8e8e8', GradientType=0);
									filter: progid:dximagetransform.microsoft.gradient(enabled=false);
								}
							}
						}
					}
				}

				.pagination-centered {
					text-align: center;
				}
			}

			#sidebar {
				font-size: 12px;

				&.sidebar-col {
					width: 280px;
					float: right;
				}

				.sidebar-box {
					box-shadow: 0 0 20px rgba(0,0,0,0.2);
					background: #f3f3f3;
					border: 1px solid #CFCFCF;
					color: #797979;
					padding: 10px 20px;
					margin-bottom: 20px;

					.sidebar-title {
						font-size: 15px;
						font-weight: 600;
						line-height: 17px;
						text-transform: uppercase;
						color: #797979;
					}

					p {
						font-style: italic;
						line-height: 13px;
						font-size: 11px;

						span {
							color: #FF4E00;
						}
					}

					.email {
						margin: 7px 0px;

						label {
							margin-right: 5px;
						}
						input {
							width: 180px;
						}
					}

					#relative_posts {
						margin-top: -5px;

						.small_post {
							list-style: none;
							padding: .5em 0;
							margin: 0;
							border-bottom: 1px solid #dadde3;
							box-shadow: #fdfdfe 0 1px;

							a {
								text-decoration: underline;
								cursor: pointer;
								color: #666;
								text-shadow: #fff 0 1px;
							}

							&:last-child {
								border-bottom: none;
								box-shadow: none;
							}
						}
					}
				}
			}

			.pagination {
				&.pagination-centered {
					text-align: center
				}

				ul {
					display: inline-block;
					list-style: none;
					padding: 10px 0 0 220px;
					-webkit-border-radius: 4px;
					-moz-border-radius: 4px;
					border-radius: 4px;

					> li {
						display: inline;
						line-height: 20px;

						&:first-child > a,
						&:first-child > span {
							border-left-width: 1px;
							-webkit-border-bottom-left-radius: 4px;
							border-bottom-left-radius: 4px;
							-webkit-border-top-left-radius: 4px;
							border-top-left-radius: 4px;
							-moz-border-radius-bottomleft: 4px;
							-moz-border-radius-topleft: 4px;
						}

						&:last-child > a,
						&:last-child > span {
							-webkit-border-top-right-radius: 4px;
							border-top-right-radius: 4px;
							-webkit-border-bottom-right-radius: 4px;
							border-bottom-right-radius: 4px;
							-moz-border-radius-topright: 4px;
							-moz-border-radius-bottomright: 4px;
						}

						> a,
						> span {
							float: left;
							padding: 4px 12px;
							line-height: 20px;
							text-decoration: none;
							background: #EAEAEA;
							border: 1px solid #B3B3B3;
							border-left-width: 0;
							color: #797979;
						}
					}

					> .active > span {
						color: #999;
						cursor: default
					}

					>.active>a,
					>.active>span,
					>li>a:focus,
					>li>a:hover {
						background: #C8C8C8;
					}
				}
			}
		}

		footer {
			clear: both;
			text-align: center;
			color: #666;
			margin-bottom: 5px;

			.rights{
				display: inline-block;
				margin-right: 80px;
				font-size: 9px;
				font-style: italic;
				font-family: 'Helvetica', sans-serif;
			}
		}
	}
}
