<div id='sign_in'>
  <%= form_for @user, url: session_path(@user), :html => { :id => 'form' } do |f| %>

  <fieldset>
    <div class='fields'>
      <%= f.label :email, 'Email:' %>
      <%= f.text_field :email, :size => '30'%>
    </div>

    <div class='fields'>
      <%= f.label :password, 'Password:' %>
      <%= f.password_field :password, :size => '30' %>
    </div>
  </fieldset>

  <div class="submit">
    <%= f.button 'Sign in' %>
  </div>

  <div class="bottom"></div>
  <% end %>
</div>
