<div id='content' class='content-col col'>
  <%= form_for @post do |f| %>

  <div class="control-group">
    <label class="control-label">Original:</label>
    <div class="controls">
      <%= f.text_field :original, placeholder: 'Original link' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Title:</label>
    <div class="controls">
      <%= f.text_field :title, placeholder: 'Title' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Body - Title:</label>
    <div class="controls">
      <%= f.text_area :body_title, placeholder: 'body_title' %>
    </div>
  </div>

  <div class="control-group">
    <label class="control-label">Article:</label>
    <div class="controls">
      <%= f.text_area :body, class: 'redactor', cols: '80', rows: '20', placeholder: '...markdown stuff...' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :tag, 'Категория: ', class: 'control-label' %>
    <div class="controls">
      <% Tag.all.each do |tag| %>
      <label class="checkbox inline">
        <%= check_box_tag 'post[tags_ids][]', tag.id, @post.tag_ids.include?(tag.id) %>
        <%= tag.name %>
      </label>
      <% end %>
    </div>
  </div>

  <div class="clear"></div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit 'Создать', class: 'btn-success' %>
    </div>
  </div>
  <% end %>
</div>
